<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.mapper.UserCourseMapper">

    <resultMap id="UserCourseResultMap" type="com.example.backend.model.UserCourse">
        <id property="userCourseId" column="user_course_id" />
        <result property="userId" column="user_id" />
        <result property="courseId" column="course_id" />
    </resultMap>

    <select id="findByUserCourseId" parameterType="long" resultMap="UserCourseResultMap">
        SELECT * FROM user_courses WHERE user_course_id = #{userCourseId}
    </select>

    <select id="findByUserId" parameterType="long" resultMap="UserCourseResultMap">
        SELECT * FROM user_courses WHERE user_id = #{userId}
    </select>

    <select id="findByCourseId" parameterType="long" resultMap="UserCourseResultMap">
        SELECT * FROM user_courses WHERE course_id = #{courseId}
    </select>

    <insert id="insertUserCourse" parameterType="com.example.backend.model.UserCourse" useGeneratedKeys="true" keyProperty="userCourseId">
        INSERT INTO user_courses (user_id, course_id)
        VALUES (#{userId}, #{courseId})
    </insert>

    <delete id="deleteUserCourse" parameterType="long">
        DELETE FROM user_courses WHERE user_course_id = #{userCourseId}
    </delete>
    <delete id="deleteByUserId" parameterType="long">
        DELETE FROM user_courses WHERE user_id = #{userId}
    </delete>
    <delete id="deleteByCourseId" parameterType="long">
        DELETE FROM user_courses WHERE course_id = #{courseId}
    </delete>
</mapper>
