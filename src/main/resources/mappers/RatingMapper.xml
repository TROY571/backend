<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.mapper.RatingMapper">

    <resultMap id="RatingResultMap" type="com.example.backend.model.Rating">
        <id property="ratingId" column="rating_id" />
        <result property="videoId" column="video_id" />
        <result property="userId" column="user_id" />
        <result property="rating" column="rating" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <select id="findByRatingId" parameterType="long" resultMap="RatingResultMap">
        SELECT * FROM ratings WHERE rating_id = #{ratingId}
    </select>

    <select id="findByVideoId" parameterType="long" resultMap="RatingResultMap">
        SELECT * FROM ratings WHERE video_id = #{videoId}
    </select>

    <insert id="insertRating" parameterType="com.example.backend.model.Rating" useGeneratedKeys="true" keyProperty="ratingId">
        INSERT INTO ratings (video_id, user_id, rating, created_at)
        VALUES (#{videoId}, #{userId}, #{rating}, #{createdAt})
    </insert>

    <update id="updateRating" parameterType="com.example.backend.model.Rating">
        UPDATE ratings
        SET video_id=#{videoId}, user_id=#{userId}, rating=#{rating}, created_at=#{createdAt}
        WHERE rating_id=#{ratingId}
    </update>

    <delete id="deleteRating" parameterType="long">
        DELETE FROM ratings WHERE rating_id = #{ratingId}
    </delete>
    <delete id="deleteByUserId" parameterType="long">
        DELETE FROM ratings WHERE user_id = #{userId}
    </delete>
    <delete id="deleteByVideoId" parameterType="long">
        DELETE FROM ratings WHERE video_id = #{videoId}
    </delete>

    <select id="findAverageRatingByVideoId" parameterType="long" resultType="double">
        SELECT AVG(rating) FROM ratings WHERE video_id = #{videoId}
    </select>
</mapper>
