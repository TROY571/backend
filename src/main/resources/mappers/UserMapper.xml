<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.backend.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.backend.model.User">
        <id property="userId" column="user_id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="email" column="email" />
        <result property="schoolId" column="school_id" />
        <result property="role" column="role" />
        <result property="profileImage" column="profile_image" />
        <result property="majorId" column="major_id" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findBySchoolId" parameterType="long" resultMap="UserResultMap">
        SELECT * FROM users WHERE school_id = #{schoolId}
    </select>

    <select id="findByUserId" parameterType="long" resultMap="UserResultMap">
        SELECT * FROM users WHERE user_id = #{userId}
    </select>

    <select id="findByMajorId" parameterType="long" resultMap="UserResultMap">
        SELECT * FROM users WHERE major_id = #{majorId}
    </select>

    <select id="findByRole" parameterType="com.example.backend.model.User$Role" resultMap="UserResultMap">
        SELECT * FROM users WHERE role = #{role}
    </select>

    <insert id="insertUser" parameterType="com.example.backend.model.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO users (username, password, email, school_id, role, profile_image, major_id, created_at, updated_at)
        VALUES (#{username}, #{password}, #{email}, #{schoolId}, #{role}, #{profileImage}, #{majorId}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="findAllUsers" resultMap="UserResultMap">
        SELECT * FROM users
    </select>

    <select id="findByRoleAndMajor" parameterType="map" resultMap="UserResultMap">
        SELECT * FROM users WHERE role = #{role} AND major_id = #{majorId}
    </select>


    <update id="updateUser" parameterType="com.example.backend.model.User">
        UPDATE users
        SET username=#{username}, password=#{password}, email=#{email}, school_id=#{schoolId}, role=#{role}, profile_image=#{profileImage}, major_id=#{majorId}, updated_at=#{updatedAt}
        WHERE user_id=#{userId}
    </update>

    <delete id="deleteUser" parameterType="long">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>
</mapper>
